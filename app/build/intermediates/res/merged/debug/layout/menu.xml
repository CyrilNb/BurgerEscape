<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/painhaut" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/jouerbouton"
        android:onClick="onPlayClick"
        android:text="@string/PlayButton"
        android:textSize="40dp" />



    <Button
        android:id="@+id/ScoreButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/scorebouton"
        android:onClick="onScoreClick"
        android:text="@string/ScoreButton"
        android:textSize="40dp" />
    
    <Button
        android:id="@+id/LeaveButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/quitterbouton"
        android:onClick="onLeaveClick"
        android:text="@string/LeaveButton"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/painbas" />

</LinearLayout>