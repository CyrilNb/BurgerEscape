<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.burgerescape"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/burger"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        

        
        <activity android:name="com.example.burgerescape.MenuActivity"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.burgerescape.MainActivity"
           		  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">            
        </activity>
        <activity android:name="com.example.burgerescape.ScoreActivity"></activity>
        <activity android:name="com.example.burgerescape.LooseActivity"></activity>
    </application>

</manifest>
